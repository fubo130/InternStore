.bkg {
    height: 100%-120rpx;
    width: 100%;
}

.bkg .Swiper_container {
    margin-top: 5rpx;
    margin-left: 3%;
    margin-right: 3%;
    width: 94%;
    height: 450rpx;
    /* padding-top: 92rpx; */
    background-color: rgba(255, 255, 255, 0.959);
    box-shadow: 0 14rpx 30rpx rgba(0,0,0,.3);
    border-radius: 40rpx;
    display: block;
    border: solod 0.3rpx rgba(0,0,0,.1);
    overflow: hidden;
    margin: 0 auto;
}
.sp {
    display: block;
    margin: 0 auto;
}
.bkg .adv-area {
    /* margin-left: 3%;
    margin-right: 3%; */
    width: 100%;
    margin-top: 20rpx; 
    height: 140rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    overflow: hidden;
}
/* 
.adv-area .adv {
    
    font-size: 40rpx;
