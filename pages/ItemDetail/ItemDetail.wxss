.coupon-area {
    /* margin-top: 20rpx; */
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: solid 15rpx rgba(220, 220, 220, 0.897);
    border-bottom: solid 15rpx rgba(220, 220, 220, 0.897);
    overflow: hidden;
}

.coupon-area .coupon-img {
    margin-left: 20rpx;
    width: 15%;
    overflow: hidden;
}

.coupon-area .coupon-detail {
    width: 80%;
    margin-left: 2%;
    height: auto;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
}

.coupon-detail .arrow {
    width: 25rpx;
    height: 30rpx;
    overflow: hidden;
    margin: auto auto;
}

