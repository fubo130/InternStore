.bkg .desc-area {
    
    width: 100%-20rpx;
    display: flex;
    flex-direction: column;
    
}

.desc-area .desc-title {
    margin-left: 10rpx;
    margin-right: 10rpx;
    font-size: 45rpx;
}

.desc-area .desc-detail {
    margin-left: 10rpx;
    margin-right: 10rpx;
    margin-top: 20rpx;
    font-size: 30rpx;
}

.bkg .price-area {
    margin-top: 30rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.price-area .price {
    font-size: 55rpx;
    color: rgb(255, 166, 0);
    margin-left: 10rpx;
    margin-right: 10rpx;
}



.bkg .btn-area {
    bottom: 0rpx;
    width: 100%;
    height: 120rpx;
    background-color: rgb(250, 250, 250); 
    position: fixed;
     box-shadow: 5rpx 5rpx 30rpx rgba(0,0,0,.3); 
    display: flex;
    flex-direction: row;
    z-index: 999;
    overflow: hidden;
    
}

.btn-area .btn1 {
    width: 32%;
    height: 100%-20rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    margin-left: 1%;
    /* background-color: yellow; */
    
  
    display: flex;
    flex-direction: row;
}

.btn-area .btn2 {
    width: 32%;
    height: 100%-20rpx;
    margin-top: 10rpx;
