.Cart_bg {
    height: 100%;
    width: 100%;
    margin-top: 0;
    margin-bottom: 15%;
    /* border: 1rpx solid red; */
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.Cart_bg .EmptyBg {
    margin-top: 170rpx;
    width: 200rpx;
    height: 200rpx;
    margin-left: 37%;
    margin-right: 37%;
}

.Cart_bg .EmptyTitle {
    width: fit-content;
    height: fit-content;
    color: gainsboro;
    font-weight: 600;
    /* border: 1rpx solid green; */
    margin-left: 25%;
    margin-right: 20%;
}

.Cart_bg .Cart_Item {
    height: 20%;
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
    /* border: 1rpx solid red; */
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    background-color: rgb(248, 247, 247);
    border-radius: 20rpx;
}

.Cart_Item .Item_left {
    width: fit-content;
    margin-left: 0;
    height: 96%;
    /* border: 1rpx solid greenyellow; */
    margin-top: 2%;
    margin-bottom: 2%;
    display: flex;
    flex-direction: row;
}

.Item_left .Item_image {
    width: 155rpx;
    height: 155rpx;
    margin: auto 10rpx;
    /* border: 1rpx solid violet; */
}

.Cart_Item .Item_right {
    width: 60%;
    /* margin-right: 0; */
    margin-left: 20rpx;
    /* margin-right: auto; */
    height: 96%;
    /* border: 1rpx solid gold; */
    margin-top: 2%;
    margin-bottom: 2%;
    display: block;
}

.Item_right .Desc {
    height: 70%;
    width: 100%;
    /* border: 1rpx solid khaki; */
    line-height: 45rpx;
    display: flex;
    flex-direction: column;
    /* white-space: nowrap; */
    
}

.itemNm {
    /* font-weight:550; */
    font-size: 40rpx;
    margin: auto 0;
    display: flex;
    flex-direction: row;
    margin-left: 5%;
    margin-right: 10%;
}

.itemDs {
    font-size: 30rpx;
    overflow: hidden;
    
    /* text-overflow: ellipsis; */
}

.Item_left .selected {
    width: 50rpx;
    height: 50rpx;
    /* border: 1rpx solid black;  */
    margin: auto auto;
    /* color: rgb(71, 71, 71); */
    font-size: 22rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    padding: 0.5rpx;
    /* position: left; */
}

.Item_right .Bottom-area {
    border-top: 1rpx solid gainsboro;
    margin-bottom: 0;
    height: 30%;
    width: 100%;
    /* border: 1rpx solid paleturquoise; */
    /* color: rgb(255, 166, 0); */
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
}

.Bottom-area .Price {
    width: fit-content;
    height: 100%;
    color: rgb(255, 166, 0);
    font-size: 35rpx;
    /* border: 1rpx solid red; */
}

.Bottom-area .num {
    color: firebrick;
    /* height: 60rpx; */
    width: fit-content;
    /* border: 1rpx solid red; */
    /* margin: auto 21rpx; */
    margin-left: auto;
    margin-right: 10rpx;
    /* display: flex; */
    /* flex-direction: row; */
}

.Cart_Item .close {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 50rpx;
    left: auto;
    margin-top: 10rpx;
    /* top: 10rpx;
    bottom: auto; */
    /* z-index: 999; */
}

.Cart_Item .share {
    width: 60rpx;
    height: 60rpx;
    /* border: solid 1rpx red; */
    position: relative;
    margin-left: auto;
    margin-top: 10rpx;
    margin-right: 20rpx;
    padding: 0;
    font-size: 25rpx;
    
}