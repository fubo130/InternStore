.bkg {
    height: 100%;
    width: 100%;
    border: 1rpx solid green;
    background-color: white;
}

.bkg .Address {
    margin-top: 5rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
    /* margin-left: 1%;
    margin-right: 1%; */
    height: 20%;
    justify-content: center;
    /* align-items: center; */
    border: 1rpx solid red;
    border-radius: 30rpx;
    box-shadow: 5rpx 5rpx 30rpx rgba(0,0,0,.3);
    background-color: rgba(243, 243, 243, 0.753);
}

.Address .info {
    width: 80%;
    height: 100%;
}

.info .leftTitle {
    font-size: 43rpx;
    width: 90%;

    height: 94%;
    margin-left: 3%;
    border-bottom: 1rpx solid rgb(226, 226, 226);
}

.info .Name {
    margin-left: 8%;
    width: 100%;
    margin-right: auto;
    /* border: 1rpx solid orange; */
}
.info .Str {
    margin-left: 8%;
    width: 100%;
    margin-right: auto;
    /* flex-flow: row wrap; */
    /* border: 1rpx solid palegreen; */
}

.f {
    width: fit-content;
    font-size: 30rpx;
}

.field {
    font-size: 40rpx;
    margin-left: 5rpx;
    text-align: right;
    /* flex-flow: row wrap; */
}

.info .Phone {
    margin-left: 8%;
    width: 100%;
    margin-right: auto;
    /* border: 1rpx solid palevioletred; */
}

.Address .arrow {
    width: 35rpx;
    height: 40rpx;
    overflow: hidden;
    margin: auto auto;
    position: relative;
    margin-right: 30rpx;
    margin-left: auto;
}

.bkg .Item {
    height: fit-content;
    width: 100%;
    margin-bottom: 20rpx;
    display: flex;
    border: 1rpx solid rebeccapurple;
    border-radius: 30rpx;
    background-color: rgba(243, 243, 243, 0.753);
    flex-direction: column;
}

.Item .itemTitle {
    font-size: 43rpx;
    display: flex;
    /* justify-content: center; */
    align-items: center;
    width: 94%;
    margin-left: 3%;
    height: 55rpx;
    border-bottom: 1rpx solid rgb(226, 226, 226);
}

.Item .itemList {
    width: 96%;
    height: fit-content;
}

.itemList .Cart_Item {
    height: 20%;
    width: 93%;
    margin-left: 5%;
    margin-right: auto;
    border: 1rpx solid red;
    margin-top: 20rpx;
    margin-bottom: 8rpx;
    display: flex;
    flex-direction: row;
    background-color: rgba(243, 243, 243, 0.753);
    border-radius: 20rpx;
}

.itemList .Item_left {
    width: 30%;
    margin-left: 0;
    height: 96%;
    /* border: 1rpx solid greenyellow; */
    margin-top: 2%;
    margin-bottom: 2%;
    display: flex;
    flex-direction: row;
}

.Item_left .Item_image {
    width: 135rpx;
    height: 135rpx;
    margin-top: auto;
    margin-bottom: auto;
    margin-left: 0;
    margin-right: auto;
    /* border: 1rpx solid violet; */
}

.itemList .Item_right {
    width: 70%;
    margin-right: 0;
    height: 96%;
    /* border: 1rpx solid gold; */
    margin-top: 2%;
    margin-bottom: 2%;
    display: block;
}

.Item_right .Desc {
    height: 70%;
    width: 100%;
    /* border: 1rpx solid khaki; */
    line-height: 45rpx;
    display: flex;
    flex-direction: column;
    /* white-space: nowrap; */
    
}

.Item_right .Dest {
    height: 25%;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.Dest .itemNm {
    /* font-weight:550; */
    font-size: 40rpx;
    /* margin: auto 0; */
    display: flex;
    flex-direction: row;
    margin-left: 5%;
    margin-right: 10%;
    color: rgb(255, 166, 0);
}

.Dest .itemAm {
    margin-right: 20rpx;
    margin-left: auto;
    font-size: 33rpx;
}

.itemDs {
    font-size: 30rpx;
    overflow: hidden;
    /* text-overflow: ellipsis; */
}


.bkg .Coupon {
    height: fit-content;
    width: 100%;
    margin-bottom: 20rpx;
    display: flex;
    border: 1rpx solid royalblue;
    border-radius: 30rpx;
    background-color: rgba(243, 243, 243, 0.753);
    flex-direction: column;
}

.Coupon .CouponTitle {
    font-size: 43rpx;
    display: flex;
    /* justify-content: center; */
    align-items: center;
    width: 90%;
    margin-left: 3%;
    height: 55rpx;
    border-bottom: 1rpx solid rgb(226, 226, 226);
}

.Coupon .NotAvl {
    width: 100%;
    height: fit-content;
    display: flex;
    flex-direction: row;
    align-items: center;
    overflow: hidden;
}

.NotAvl .coupon-img {
    margin-left: 20rpx;
    width: 15%;
    overflow: hidden;
}

.NotAvl .coupon-detail {
    width: 80%;
    margin-left: 2%;
    height: fit-content;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
}

.NotAvl .arrow {
    width: 25rpx;
    height: 30rpx;
    overflow: hidden;
    margin: auto auto;
    position: relative;
    margin-right: 30rpx;
    margin-left: auto;
}

.yl {
    color: rgb(255, 166, 0);
}

.bkg .Total {
    height: fit-content;
    width: 100%;
    display: flex;
    border: 1rpx solid royalblue;
    border-radius: 30rpx;
    background-color: rgba(243, 243, 243, 0.753);
    flex-direction: column;
    margin-bottom: 100rpx;
}

.Total .TotalTop {
    display: flex;
    flex-direction: row;
    /* justify-content: center; */
    align-items: center;
    width: 94%;
    margin-left: 3%;
    height: 55rpx;
    border-bottom: 1rpx solid rgb(226, 226, 226);
}

.TotalTop .TotalTitle {
    font-size: 43rpx;
}

.TotalTop .TotalPrice {
    font-size: 35rpx;
    color: crimson;
    position: relative;
    margin-right: 5rpx;
    margin-left: auto;
}

.TotalTop .TotalDetail {
    height: fit-content;
    margin-top: 20rpx;
    width: 93%;
    margin-left: 3%;
    margin-right: auto;
    font-size: 10rpx;
}

.TotalDetail .Total-Row {
    height: fit-content;
    margin-top: 0rpx;
    width: 93%;
    margin-left: 3%;
    margin-right: 3%;
    display: flex;
    flex-direction: row;
    
}

.Total-Row .Row-left {
    height: fit-content;
    margin-left: 0;
    margin-right: auto;
    font-size: 35rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.Total-Row .Row-right {
    height: fit-content;
    margin-left: auto;
    margin-right: 5rpx;
    font-size: 35rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgb(255, 166, 0);
}

.bkg .btn-area {
    bottom: 0rpx;
    width: 100%;
    height: 100rpx;
    background-color: limegreen;
    position: fixed;
    box-shadow: 5rpx 5rpx 30rpx rgba(0,0,0,.3); 
    display: flex;
    flex-direction: row;
    z-index: 999;
    overflow: hidden;
    color: white;
    font-size: 50rpx;
    align-items: center;
    justify-content: center;
}




.drawer_screen { 
    width: 100%; 
    height: 100%; 
    position: fixed; 
    top: 0; 
    left: 0; 
    z-index: 1000; 
    background: #000; 
    opacity: 0.5; 
    overflow: hidden; 
} 
  
/*content*/
.drawer_box { 
    width: 650rpx; 
    overflow: hidden; 
    position: fixed; 
    top: 50%; 
    left: 0; 
    z-index: 1001; 
    background: #FAFAFA; 
    margin: -300rpx 50rpx 0 50rpx; 
    border-radius: 3px; 
} 
  
.drawer_title{ 
    padding:30rpx; 
    font: 40rpx "microsoft yahei"; 
    text-align: center; 
} 
.drawer_content { 
    height: 500rpx; 
    overflow-y: scroll; 
} 
  
.btn_ok{ 
    padding: 20rpx; 
    font: 40rpx "microsoft yahei"; 
    text-align: center; 
    border-top: 1px solid #E8E8EA; 
    color: #3CC51F; 
    margin-bottom: 5rpx;
} 

.btn_cancel{ 
    padding: 20rpx; 
    font: 40rpx "microsoft yahei"; 
    text-align: center; 
    border-top: 2rpx solid #E8E8EA; 
    color: rgb(197, 50, 31); 
} 




.Coupon-background {
    height: 100%;
    width: 100%;
}

.Coupon-background .coupon {
    width: 90%;
    height: 240rpx;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
}

.coupon .coupon-left {
    width: 35%;
    height: 100%;
    position: relative;
    background-image: radial-gradient(circle at right top, #fff, #fff 28rpx, transparent 30rpx),
           radial-gradient(circle at right bottom, #fff, #fff 28rpx, transparent 30rpx);
    background-color: rgb(252, 45, 45);
    /* border-right: 1rpx dotted white; */
    overflow: hidden;
}

.coupon .coupon-left:after {
    content: '';
    position: absolute;
    top: 0rpx;
    bottom: 0rpx;
    left: -10rpx;
    width: 20rpx;
    height: 100%;
    background: radial-gradient(circle, #fff, #fff 8rpx, transparent 10rpx);
    background-size: 20rpx 20rpx;
}

.coupon-left .left-content{
    width: 70%;
    height: 80%;
    margin-top: 10%;
    margin-bottom: 10%;
    margin-left: 15%;
    margin-right: 15%;
    /* border: 1rpx solid white; */
    display: flex;
    flex-direction: column;
}

.left-content .left-top {
    width: 100%;
    height: 60%;
    /* border: 1rpx solid greenyellow; */
    color: white;
    font-size: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.left-content .left-bottom {
    width: 100%;
    height: 40%;
    /* border: 1rpx solid black; */
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
}

.left-bottom .text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: black;
}

.coupon .coupon-right {
    width: 64%;
    margin-left: 3rpx;
    height: 100%;
    background-color: rgb(211, 211, 211);
    overflow: hiddden;
    border-left: 1rpx dashed rgb(255, 1, 1);
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
}

.coupon-right .right-content {
    width: 85%;
    height: 100%;
    margin: auto auto;
    /* border: 1rpx solid white; */
