.Coupon-background {
    height: 100%;
    width: 100%;
}

.Coupon-background .coupon {
    width: 90%;
    height: 240rpx;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
}

.coupon .coupon-left {
    width: 35%;
    height: 100%;
    position: relative;
    background-image: radial-gradient(circle at right top, #fff, #fff 28rpx, transparent 30rpx),
           radial-gradient(circle at right bottom, #fff, #fff 28rpx, transparent 30rpx);
    background-color: rgb(252, 45, 45);
    /* border-right: 1rpx dotted white; */
    overflow: hidden;
}

.coupon .coupon-left:after {
    content: '';
    position: absolute;
    top: 0rpx;
    bottom: 0rpx;
    left: -10rpx;
    width: 20rpx;
    height: 100%;
    background: radial-gradient(circle, #fff, #fff 8rpx, transparent 10rpx);
    background-size: 20rpx 20rpx;
}

.coupon-left .left-content{
    width: 70%;
    height: 80%;
    margin-top: 10%;
    margin-bottom: 10%;
    margin-left: 15%;
    margin-right: 15%;
    /* border: 1rpx solid white; */
    display: flex;
    flex-direction: column;
}

.left-content .left-top {
    width: 100%;
    height: 60%;
    /* border: 1rpx solid greenyellow; */
    color: white;
    font-size: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.left-content .left-bottom {
    width: 100%;
    height: 40%;
    /* border: 1rpx solid black; */
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
}

.left-bottom .text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: black;
}

.coupon .coupon-right {
    width: 64%;
    margin-left: 3rpx;
    height: 100%;
    background-color: rgb(211, 211, 211);
    overflow: hiddden;
    border-left: 1rpx dashed rgb(255, 1, 1);
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
}

.coupon-right .right-content {
    width: 85%;
    height: 100%;
    margin: auto auto;
    /* border: 1rpx solid white; */
    display: flex;
    flex-direction: column;
}

.right-content .right-top {
    height: 85%;
    width: 100%;
    /* border: 1rpx solid slateblue; */
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1rpx dashed rgb(63, 63, 63);
}

.right-content .right-bottom {
    height: 15%;
    width: fit-content;
    /* border: 1rpx solid slateblue; */
    margin-right: 0rpx;
    margin-left: auto;
    font-size: 19rpx;
    display: flex;
    align-items: center;
}

.Coupon-background .EmptyBg {
    margin-top: 170rpx;
    width: 200rpx;
    height: 200rpx;
    margin-left: 37%;
    margin-right: 37%;
}

.Coupon-background .EmptyTitle {
    width: fit-content;
    height: fit-content;
    color: gainsboro;
    font-weight: 600;
    display: flex;
    margin: 0 auto;
    /* justify-content: center; */
    /* align-items: center; */
}
