.home_bg {
    height: 100%;
    width: 100%;
    background-color: rgb(134, 134, 134);
    background-size: 100%;
    display: flex;
    flex-direction: row;
}

.sp {
    display: block;
    margin: 0 auto;
}

.Swiper_container {
    margin-top: 20rpx;
    margin-left: 3%;
    margin-right: 3%;
    width: 94%;
    height: 324rpx;
    /* padding-top: 92rpx; */
    background-color: rgba(255, 255, 255, 0.959);
    box-shadow: 0 14rpx 30rpx rgba(0,0,0,.3);
    border-radius: 40rpx;
    display: block;
    overflow: hidden;
}

.bkg {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.title{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
}
 
 .SearchBar {
     width: 90%;
     margin-top: 5%;
     margin-right: 5%;
     margin-left: 5%;
     height: 70rpx;
     border-radius: 100rpx;
     border: 1rpx solid gainsboro;
     display: flex;
     flex-direction: row;
 }

 .SearchBar .search {
     margin-left: 3%;
     margin-right: 3%;
     display: flex;
     flex-direction: row;
     justify-content: center;
     margin-top: 1%;
 }

.SearchBar .search-btn {
    width: 10%;
    margin-left: 80%;
    height: 70rpx;
}

.spt {
    height: 40rpx;
    width: 100%;
    margin-top: 25rpx;
    /* border: 1rpx solid black; */
    display: flex;
    flex-direction: row;
    /* border-top: 1rpx solid rgba(220, 220, 220, 0.897); */
    /* border-bottom: 2rpx solid rgba(220, 220, 220, 0.897); */
    
}

.spt .spt-item {
    width: 18.7%;
    margin-left: 5%;
    height: 95%;
    display: flex;
    flex-direction: row;
    margin-bottom: 5%;
}

.spt-item .spt-img {
    width: 30%;
    margin-left: 0;
    height: 100%;
}

.spt-item .spt-text {
    display: block;
    /* flex-direction: row; */
    font-size: 20rpx;
    width: auto;
    line-height:200%;
    margin-left: 3rpx;
}

.act {
    margin-top: 5rpx;
    height: 150rpx;
    width: 99%;
    /* border: 1rpx solid black; */
    display: flex;
    flex-direction: row;
    border-top: 2rpx solid rgba(220, 220, 220, 0.897);
    border-bottom: 13rpx solid rgba(220, 220, 220, 0.897);
}

.act .act-item {
    height: 80%;
    width: 15%;
    /* border: wheat 1rpx solid; */
    margin: auto auto;
}

.act-item .act-itemImg {
    width: 70%;
    height: 70%;
    margin: 0 auto;
    /* border: 1rpx solid blue; */
}

.act-item .act-itemTitle {
    width: auto;
    height: 30%;
    border-top: 0;
    font-size: 87%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.all-item {
    height: auto;
    width: 100%;
    display: flex;
    display: -webkit-flex;
    flex-flow: row wrap;
    -webkit-flex-flow: row wrap;
}

.all-item .dtl-item {
    width: 49.5%;
    height: 240rpx;
    margin-left: 0%;
    overflow: hidden;
    border-bottom: solid 0.5rpx rgba(220, 220, 220, 0.897);
    margin-top: 0rpx;
    display: inline-block;
}

.all-item .dtl-item:nth-child(2n) {
    
    border-left: solid 0.5rpx rgba(220, 220, 220, 0.897);
}

.dtl-item .item-image {
    width: 100%;
    height: 200rpx;
    margin-top: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dtl-item .dtl-nm {
    width: auto;
    height: 30rpx;
    margin-bottom: 0;
    font-size: 30rpx;
    line-height: -100rpx;
}