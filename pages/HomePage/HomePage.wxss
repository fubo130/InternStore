.home_bg {
    height: 100%;
    width: 100%;
    background-color: rgb(134, 134, 134);
    background-size: 100%;
    display: flex;
    flex-direction: row;
}

.sp {
    display: block;
    margin: 0 auto;
}

.Swiper_container {
    margin-left: 3%;
    margin-right: 3%;
    width: 94%;
    height: 324rpx;
    /* padding-top: 92rpx; */
    background-color: rgba(255, 255, 255, 0.959);
    box-shadow: 0 14rpx 30rpx rgba(0,0,0,.3);
    border-radius: 40rpx;
    display: block;
}

.bkg {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.title{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
}
 
 
.search_con{
  width: 80%;
  margin:20px auto;
}
 
.search_con .search_input{
  border: 2rpx solid rgb(214, 211, 211);
  height: 90rpx;
  border-radius: 200rpx;
  font-size: 34rpx;
  padding-left: 30rpx;/*此处要用padding-left才可以把光标往右移动15像素，不可以用text-indent*/
  color: #333;
}
 
.search_con .search_btn{
  margin-top: 30rpx;
  width: 100%;
  height: 90rpx;
  background: #56b273;
  color: #fff;
  border-radius: 200rpx;
}
 
.search_result{
  width: 80%;
  margin:20rpx auto;
}
 
 
.search_result .empty{
  text-align: center;
  color: #f00;
  font-size: 30rpx;
}
 
.search_result .noresult{
  text-align: center;
  color: #666;
  font-size: 30rpx;
}
 
.search_result .resname{
  text-align: left;
  color: #333;
  font-size: 30rpx;
}



