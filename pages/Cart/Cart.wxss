page {
    height: 100%;
    width: 100%;
}

.Cart_bg {
    margin-top: 0;
    margin-bottom: 15%;
    height: 100%;
    width: 100%;
}

.SelectAll {
    height: 50rpx; 
    margin-top: 30rpx;
    margin-bottom: 20rpx; 
    margin-left: 1%;
    /* border: 1rpx solid gray; */
    padding: 2rpx 10rpx;
    width: 200rpx;
    /* border-radius: 13rpx; */
    /* background-color: rgb(248, 247, 247); */
    display: flex;
    flex-direction: row;
}

.SelectAll .Slt-text {
    
    font-size: 33rpx;
    margin:  auto 20rpx;
    color: rgb(78, 78, 78);
}
.subTt {
    
    margin: auto 15rpx;
    width: fit-content;
    height: 70rpx;
    /* border: 1rpx solid rgb(255, 0, 0); */
    display: flex;
    flex-direction: row;
    white-space: nowrap;
}

.subTt .Sub-text {
    /* color: rgb(240, 70, 70); */
    font-size: 40rpx;
    margin:  auto 20rpx;
}

.SelectAll .selected2 {
    width: 50rpx;
    height: 50rpx;
    /* border: 1rpx solid black;  */
    margin: auto 0;
}

.btn_area .checkout-btn {
    /* border: 1rpx solid red; */
    margin-top: 0;
    height: 100%;
    width: 225rpx;
    margin-right: 0;
    margin-left: auto;
    background-image: linear-gradient( 135deg, #FCCF31 10%, #F55555 100%);
    display: flex;
    flex-direction: row;
    justify-content: center;
    color: whitesmoke;
}

.Cart_bg .Cart_area {
    height: 90%;
    width: 100%;
}

.Cart_area .Cart_Item {
    height: 20%;
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
    /* border: 1rpx solid red; */
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    background-color: rgb(248, 247, 247);
    /* border:dotted 1rpx #F55555; */
    border-radius: 20rpx;
}

.Cart_Item .Item_left {
    width: 40%;
    margin-left: 0;
    height: 96%;
    /* border: 1rpx solid greenyellow; */
    margin-top: 2%;
    margin-bottom: 2%;
    display: flex;
    flex-direction: row;
}

.Item_left .selected {
    width: 50rpx;
    height: 50rpx;
    /* border: 1rpx solid black;  */
    margin: auto 10rpx;
}

.Item_left .Item_image {
    width: 155rpx;
    height: 155rpx;
    margin: auto auto;
    /* border: 1rpx solid violet; */
}

.Cart_Item .Item_right {
    width: 60%;
    margin-right: 0;
    height: 96%;
    /* border: 1rpx solid gold; */
    margin-top: 2%;
    margin-bottom: 2%;
    display: block;
}

.Item_right .Desc {
    height: 70%;
    width: 100%;
    /* border: 1rpx solid khaki; */
    line-height: 45rpx;
    display: flex;
    flex-direction: column;
    white-space: nowrap;
    
}

.itemNm {
    font-size: 40rpx;
    /* margin: auto auto; */
    padding: 10rpx 10rpx;
    /* line-height: -60rpx; */
    display: flex;
    flex-direction: row;
    margin-left: 5%;
    margin-right: 10%;
    height: fit-content;
    border-bottom: 1rpx solid rgb(226, 226, 226);
}

.itemDs {
    height: fit-content;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
}

.Item_right .Bottom-area {
    margin-bottom: 0;
    height: 30%;
    width: 100%;
    /* border: 1rpx solid paleturquoise; */
    color: rgb(255, 166, 0);
    display: flex;
    flex-direction: row;
}

.Bottom-area .Price {
    width: auto;
    height: 100%;
    /* border: 1rpx solid red; */
}

.Bottom-area .num {
    width: 50%;
    height: fit-content;
    /* border: 1rpx solid red; */
    margin-right: 0;
    margin-left: auto;
    display: flex;
    flex-direction: row;
}

.num .plus {
    width: 50rpx;
    height: 50rpx;
    margin-left: auto;
    margin-right: 1rpx;
    /* border: 1rpx solid orange; */
}

.num .dig {
    width: 62rpx;
    height: 50rpx;
    border: 1rpx solid gray;
    background-color: rgb(255, 255, 255);
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin: auto auto;
    font-size: 40rpx;
}

.num .min {
    width: 50rpx;
    height: 50rpx;
    margin-left: 1rpx;
    margin-right: auto;
    /* border: 1rpx solid olive; */
}

.Cart_bg .btn_area {
    bottom: 0rpx;
    width: 100%;
    height: 10%;
    background-color: rgb(240, 240, 240); 
    position: fixed;
    border-top: 3rpx solid rgb(148, 148, 148);
    display: flex;
    flex-direction: row;
}