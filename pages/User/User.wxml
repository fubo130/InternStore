<view catchtouchmove="true">
    <view class="user_bg">
        <view class="background_view">
            <view class='wave'></view>
            <view class='wave_1'></view>
            
            <view class='header'>
                <open-data type="userAvatarUrl"></open-data>
            </view>
        </view>

        <view class="bottom">
            <view class="func_area">
                <view class="row" style="margin-top:20rpx">
                    <text class="card-header">会员中心</text>
                    <text class="card-font">ID: {{userNickname}}</text>
                    <text class="card-font">积分: {{userExp}}</text>

                    <view class="btn-row" bindtap="User_center">
                        <image class="btn-image" src='../../images/user_detail.png' mode="aspectFit"/>
                        <text class="btn-description">个人信息</text>
                    </view>
                    <view class="btn-row" bindtap="My_order">
                        <image class="btn-image" src='../../images/order.png' mode="aspectFit"/>
                        <text class="btn-description">我的订单</text>
                    </view>
                    <view class="btn-row" bindtap="My_history">
                        <image class="btn-image" src='../../images/ft.png' mode="aspectFit"/>
                        <text class="btn-description">我的足迹</text>
                    </view>
                    <view class="btn-row" bindtap="My_appointment">
                        <image class="btn-image" src='../../images/appointment.png' mode="aspectFit"/>
                        <text class="btn-description">我的收藏</text>
                    </view>
                    <view class="btn-row" bindtap="My_coupon">
                        <image class="btn-image" src='../../images/coupon.png' mode="aspectFit"/>
                        <text class="btn-description">我的优惠券</text>
                    </view>     
                </view>   
            </view>
        </view> 
    </view>
</view>
