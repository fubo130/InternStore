.wave{
    position: absolute;
    top: -40rpx;
	width: 100%;
	height: 200rpx;
	background-color: rgb(236, 58, 52, 0.959);
    border-radius: 19%;
    overflow: hidden;
    box-shadow: 10rpx 10rpx 34rpx rgba(0, 0, 0, 0.7);  
}
.wave:before,.wave:after{
	content: "";
	position: absolute;
	width: 100%;
	height: 800rpx;
	top: 320%;
	left: 50%;
	background-color: rgba(255, 255, 255, 0.4);
	border-radius: 45%;
	transform: translate(-50%, -70%) rotate(0);
	animation: rotate 6s linear infinite;
    overflow: hidden;
}
.wave:after {
	border-radius: 47%;
	background-color: rgba(255, 255, 255, .7);
	transform: translate(-50%, -70%) rotate(0);
	animation: rotate 10s linear -5s infinite;
    overflow: hidden;
}
@keyframes rotate {
	50% {
		transform: translate(-50%, -73%) rotate(180deg);
	} 100% {
		transform: translate(-50%, -70%) rotate(360deg);
	}
}
